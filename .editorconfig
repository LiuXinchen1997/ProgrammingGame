# EditorConfig is awesome: http://EditorConfig.org
# top-most EditorConfig file
root = true
[*]
end_of_line = lf
insert_final_newline = true

[*.{js,py}]
charset = utf-8
indent_style = space
indent_size = 4
trim_trailing_whitespace = true
translate_tabs_to_spaces = true

[Makefile]
indent_style = tab

[{package.json,.travis.yml}]
indent_style = space
indent_size = 4

[*.{html,css}]
charset = utf-8
indent_style = space
indent_size = 4
insert_final_newline = true
trim_trailing_whitespace = true
